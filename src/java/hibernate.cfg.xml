<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/publicwall?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">4321</property>
    <property name="hibernate.show_sql">true</property>
    <mapping resource="db/Countrytable.hbm.xml"/>
    <mapping resource="db/Posttable.hbm.xml"/>
    <mapping resource="db/Usersandpost.hbm.xml"/>
    <mapping resource="db/Role.hbm.xml"/>
    <mapping resource="db/Numberoflikes.hbm.xml"/>
    <mapping resource="db/Postkeywords.hbm.xml"/>
    <mapping resource="db/Userrole.hbm.xml"/>
    <mapping resource="db/Gender.hbm.xml"/>
    <mapping resource="db/Users.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
